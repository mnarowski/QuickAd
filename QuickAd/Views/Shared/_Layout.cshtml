<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>QickAd</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/themes/base/jquery.ui.all.css")
        @Styles.Render("~/Content/css/lightbox.css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("QuickAd", "Index", "Home")</p>
                    <blockquote class="move_to_left">Sprzedaj/zamień co chcesz!</blockquote>
                </div>
                <div class="float-right">
                    
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Główna", "Index", "Home")</li>
                            <li>@Html.ActionLink("Konto", "Edit", "Account")</li>
                            <li>@Html.RouteLink("Zaloguj się", "Zaloguj")</li>
                            <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Dodaj nowe!", "Create", "Advert")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Grupa 1 WZIM SGGW 2010-2014</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/Scripts/jquery-ui-1.8.20.js");
        @Scripts.Render("~/Scripts/lightbox.js");
    
        @RenderSection("scripts", required: false)
    </body>
</html>
