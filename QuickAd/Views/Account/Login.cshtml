@model QuickAd.Models.User

<section id="loginForm">
<h2>Zaloguj się do naszego serwisu.</h2>
@using (Html.BeginForm("Login","Account",FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Logowanie</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Vemail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Vemail)
            @Html.ValidationMessageFor(model => model.Vemail)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Vpassword)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Vpassword, new { type="password" })
            @Html.ValidationMessageFor(model => model.Vpassword)
        </div>

        <input type="hidden" name="redirect_ok" value="@ViewBag.redirect_ok" />
        <input type="submit" value="Wbijaj" />
    </fieldset>
    <p>
        @Html.ActionLink("Zarejestruj się", "Register") jeśli nie masz jeszcze konta.
    </p>
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
